{
  "manifest_version": 2,

  "name": "VK Messanger panel",
  "description": "Please, ensure that chrome://flags/#enable-panels option is enabled. Enjoy.",
  "version": "1.0",

  "permissions": [
    	"*://*.vk.com/*", "*://vk.com/*",
	"tabs",
	"background"
    ],
	
  "browser_action": {
           "name": "Click to get URL"

  },
  
  "background": {    
    "scripts": ["bg.js"],
    "matches": ["*://*.vk.com/*", "*://vk.com/*"]

  },
  "icons": { "16": "icon.png",
           "48": "icon.png",
          "128": "icon.png" },

  "content_scripts": [{
    "matches": ["*://*.vk.com/*", "*://vk.com/*"],
    "js": ["content.js"]
  }]

}
